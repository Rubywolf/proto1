<% form_tag '/pics/setprefs' do %>
<table align="center">
<tr><td colspan="2"><h1>Set Preferences</h1><h3>(preferences are specific to this browser on this computer)</h3></td></tr>
<tr><td><b><%= label_tag 'Maximum Height for Image Display'%></b></td><td><%= text_field_tag 'height_max', @height_limit%></td></tr>
<tr><td><b><%= label_tag 'Maximum Width for Image Display' %></b></td><td><%= text_field_tag 'width_max', @width_limit %></td></tr>
<tr><td><b><%= label_tag 'Time Between Slides' %></b></td><td><%= text_field_tag 'slide_time', @slide_time %></td></tr>
<tr><td></td><td><%= submit_tag 'Save' %>&nbsp;&nbsp;&nbsp<%= link_to "Cancel", :back %></td></tr>
</table>
<% end %>
<%= debug(params) if Rails.env.development? %>